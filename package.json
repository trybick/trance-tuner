{
  "name": "tray-tuner",
  "productName": "Tray Tuner",
  "version": "1.1.0",
  "description": "Control radio streams from system tray",
  "author": "Tim Rybicki",
  "license": "MIT",
  "main": "./dist/main.js",
  "bugs": {
    "url": "https://github.com/trybick/tray-tuner/issues"
  },
  "homepage": "https://github.com/trybick/tray-tuner",
  "repository": {
    "type": "git",
    "url": "https://github.com/trybick/tray-tuner"
  },
  "keywords": [
    "electron",
    "tray",
    "radio",
    "music"
  ],
  "scripts": {
    "build": "npm run sass && tsc",
    "sass": "sass ./style/index.scss ./dist/index.css",
    "start": "npm run build && electron ./dist/main.js",
    "package-linux": "electron-packager . --platform=linux --out=packages --overwrite --icon=images/music-record.ico",
    "package-mac": "electron-packager . --platform=darwin --out=packages --overwrite --icon=images/music-record.icns",
    "package-windows": "electron-packager . --platform=win32 --out=packages --overwrite --icon=images/music-record.ico",
    "package-all": "npm --no-git-tag-version version patch && npm run build && npm run package-linux && npm run package-mac && npm run package-windows"
  },
  "dependencies": {
    "about-window": "^1.13.2",
    "electron-prompt": "^1.5.1",
    "electron-store": "^5.1.0"
  },
  "devDependencies": {
    "@types/electron-prompt": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "electron": "^8.0.0",
    "electron-packager": "^14.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.8.2"
  }
}
